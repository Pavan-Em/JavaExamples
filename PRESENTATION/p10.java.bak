class p10
{
	public static void main(String[]args)
	{
		int n=5;
		int m=(n+1)/5;
		for(int i=1;i<=m;i++)
		{
			for (int s=1;s<=m-i;s++ )
			{
				System.out.print("  ");
			}
			for (int j=1;j<=(i*2)-1 ;j++ )
			{
				System.out.print("* ");
			}
			
			System.out.println();
		}
		for (int i=1;i<=m-1 ;i++ )
		{
			for (int s=1;s<=i ;s++ )
			{
				System.out.print("  ");
			}

			for (int j=1;j<=((m-1)*2)-1 ;j++ )
			{
				System.out.print("* ");
			}
			}
	}
}